<!DOCTYPE html>
<html>
  <head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>LLEDD.TV - Painel de Controle</title>
		<%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults, "jquery.uniform.min", "jquery.maskedinput-1.3.min", "jquery.tokeninput" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
	<% if user_signed_in? %>
  	<body>
	<% elsif %>
 		<body id="login-body">
	<% end %>
      <% if user_signed_in? %>
				<%= render :partial => "layouts/logged" %>
			<% elsif %>
				<div id="login-title">
					<h1>Dialetto</h1>
				</div>
				<% flash.each do |name, msg| %>
				  <%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %>
				<%= yield %>
      <% end %>
		<script type="text/javascript">
			<%= yield :js %>
		</script>
  </body>
</html>