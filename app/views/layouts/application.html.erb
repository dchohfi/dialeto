<!DOCTYPE html>
<html>
  <head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>LLEDD.TV - Painel de Controle</title>
		<%= stylesheet_link_tag "commons" %>
		<%= stylesheet_link_tag "globals" %>
		<%= stylesheet_link_tag "plugins" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
	<% if user_signed_in? %>
  	<body>
	<% elsif %>
 		<body id="login-body">
	<% end %>
      <% if user_signed_in? %>
			<!-- Header -->
        <div id="header">
    			<div id="header-top">
	         	<div id="top-block-left">
	          	<p>Bem vindo <%= current_user.email %> [ <%= current_user.role.humanize %> ]</p>
            </div>
            <ul id="top-toolbox">
							<li><%= link_to "Minha Conta", edit_user_registration_path %></li>
              <li><%= link_to "Logout", destroy_user_session_path %></li>
            </ul>
		        <div class="clear"></div>
          </div>
          <div id="header-middle">
						<%= link_to "LLEDD.TV", root_url, :id => "logo" %>
          </div>
	          <div id="menu">
							<%= menu_principal %>
				  	</div>
        </div>
        <div class="clear"></div>
			<% elsif %>
				<div id="login-title">
					<h1>Dialetto</h1>
				</div>
      <% end %>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= yield %>
  </body>
</html>