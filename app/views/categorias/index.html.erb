<div class="categorias">
<% @categorias.each do |categoria| %>
  <div class="listagem">
    <h2><%= link_to categoria.descricao, categoria %></h2>
    <%= link_to "Edit", edit_categoria_path(categoria) %> |
    <%= link_to "Destroy", categoria, :method => :delete, :confirm => "Are you sure?" %>
  </div>
<% end %>
</div>
</br>
<%= link_to 'New Categoria', new_categoria_path, :class => "new" %>